{
  "private": true,
  "name": "@apps/shared",
  "version": "1.0.0",
  "description": "Shared code for React Native apps",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "react-native": "./src/index.ts",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "dev": "tsup --watch --silent",
    "lint": "eslint --ext js,ts,tsx .",
    "test": "jest --passWithNoTests",
    "build": "tsup --clean"
  },
  "devDependencies": {
    "@apps/eslint-config": "*",
    "@testing-library/react-native": "^11.4.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^26.0.24",
    "@types/react": "~18.2.14",
    "@types/react-native": "0.72.6",
    "babel-preset-expo": "~9.5.0",
    "jest": "^29.2.1",
    "jest-expo": "^49.0.0",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-unistyles": "^1.2.0",
    "react-test-renderer": "18.2.0",
    "tsup": "^6.5.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-web": "*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  },
  "eslintConfig": {
    "extends": "@apps/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build"
    ]
  },
  "jest": {
    "preset": "jest-expo"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "build",
    "sourcemap": true,
    "dts": true,
    "external": [
      "react",
      "react-native",
      "react-native-web"
    ]
  },
  "dependencies": {
    "@tanstack/react-query": "^5.12.2",
    "@react-navigation/native": "^6.0.2",
    "expo-router": "^2.0.0"
  }
}
